<?xml version="1.0" encoding="utf-8"?>
<!-- chat_folder views -->
<odoo>
    <record id="chat_folder_view_form" model="ir.ui.view">
      <field name="name">chat_folder Form</field>
        <field name="model">chat_folder</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="chat_folder_view_tree" model="ir.ui.view">
        <field name="name">chat_folder Tree</field>
        <field name="model">chat_folder</field>
        <field name="arch" type="xml">
            <tree default_order="name ">
                <field name="name"  />
            </tree>
        </field>
    </record>

    <record id="chat_folder_view_search" model="ir.ui.view">
        <field name="name">chat_folder Search</field>
        <field name="model">chat_folder</field>
        <field name="arch" type="xml">
           <search string="">
                <field name="name" />
                <separator />
                <filter name="filter_archived" domain="[('active','=',0)]" string="Archiviati" />
                <group expand="1" string="Group By">
                     <filter string="Gruppo" name="name" context="{'group_by':'name'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- chat_folder action -->
    <record id="view_chat_folder_action" model="ir.actions.act_window">
      <field name="name">chat_folder</field>
      <field name="res_model">chat_folder</field>
      <field name="domain"></field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="chat_folder_view_tree" />
    </record>

<!-- chat_folder menu -->
<menuitem id="chat_folder_menu" name="chat_folder" parent="menu_root" sequence="40" action="view_chat_folder_action" groups="base.group_user" />

</odoo>